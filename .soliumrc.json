{
  "extends": "solium:all",
  "plugins": ["security"],
  "rules": {
    "arg-overflow": "error",
    "blank-lines": "error",
    "camelcase": "error",
    "deprecated-suicide": "error",
    "emit": "error",
    "error-reason": "off",
    "function-order": "off",
    "indentation": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "no-constant": "error",
    "no-empty-blocks": "error",
    "pragma-on-top": "error",
    "quotes": ["error", "double"],
    "uppercase": "warning",
    "visibility-first": "error",
    "whitespace": "error",

    "security/enforce-explicit-visibility": ["error"],
    "security/no-assign-params": "off",
    "security/no-block-members": ["warning"],
    "security/no-inline-assembly": "off"
  }
}
